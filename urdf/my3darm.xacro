        <material name="orange" />
      </visual>
  </link>
    
  <joint name="base_link__link_01" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="-0.386 0 0.425"/>
    <parent link="base_link"/>
    <child link="link_01"/>
  </joint>
    
  <link name="link_01">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.1875" />
        <geometry>
          <mesh filename="package://mrm2/meshes/Link1_reduced.stl" scale="0.01 0.01 0.01" />
        </geometry>
