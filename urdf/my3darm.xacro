<?xml version="1.0" ?>

<robot name="popo" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="orange">
    <color rgba="84 211 0 1" />
  </material>
  <material name="red">
    <color rgba="77 5 232 1" />
  </material>
  <material name="malachita">
    <color rgba="64 0 230 1" />
  </material>
  <material name="electric_indigo">
    <color rgba="140 252 20 1" />
  </material>

  <link name="base_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.225" />
        <geometry>
          <mesh filename="package://mrm2/meshes/Base_reduced.stl" scale="0.01 0.01 0.01" />
