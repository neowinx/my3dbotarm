    <origin rpy="0 0 0" xyz="0 0 0.2500431"/>
    <parent link="link_01"/>
    <child link="link_02"/>
  </joint>

  <link name="link_02">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.58323" />
